= form_tag url_for(:genes_search), method: 'get' do
  %p
    = label_tag 'q', caption: 'Symbol, name, protein, location'
    = text_field_tag 'q', value: params[:q], id: 'q'
    = submit_tag :Search

- if @genes
  %h3= pluralize(@genes.size, 'gene found')
  %ul
    - @genes.each do |gene|
      %li= link_to gene.symbol_and_name, url(:genes, :show, id: gene.ncbi_id)
