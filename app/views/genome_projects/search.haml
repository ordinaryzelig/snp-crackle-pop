= form_tag url_for(:genome_projects, :search), method: 'get' do
  %p
    = label_tag 'q', caption: 'Name, sequencing centers'
    = text_field_tag 'q', value: params[:q], id: 'q'
    = submit_tag :Search

- if @genome_projects
  %h3= 'Found ' + pluralize(@genome_projects.size, 'genome project')
  %ul
    - @genome_projects.each do |genome_project|
      %li= link_to genome_project.name, url(:genome_projects, :show, id: genome_project.ncbi_id)
