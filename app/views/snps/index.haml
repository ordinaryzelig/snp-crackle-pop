%h2 SNPs

- form_tag url_for(:snps_index), method: 'get' do
  %p
    = label_tag 'rs_number'
    = text_field_tag 'rs_number', id: 'rs_number', value: params[:rs_number]
    = submit_tag :Search

- if @snp
  %table.model_info
    %tbody
      = row_for_attribute @snp, :accession
      = row_for_attribute @snp, :allele
      = row_for_attribute @snp, :base_position
      = row_for_attribute @snp, :chromosome
      = row_for_attribute @snp, :function_class
      = row_for_attribute @snp, :gene_symbol,        label: 'Gene' do
        = link_to @snp.gene_symbol, url(:genes, :show, id: @snp.gene_symbol)
      = row_for_attribute @snp, :het_uncertainty
      = row_for_attribute @snp, :heterozygosity
      = row_for_attribute @snp, :min_success_rate
      = row_for_attribute @snp, :max_success_rate
      = row_for_attribute @snp, :reference_assembly
      = row_for_attribute @snp, :rs_number,          label: 'RS number'
      = row_for_attribute @snp, :snp_class,          label: 'SNP class'
      = row_for_attribute @snp, :_taxonomy_id,       label: 'Taxonomy ID'
